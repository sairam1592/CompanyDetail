<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:id="@+id/relativelayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#F9F8E9">

        <RelativeLayout
            android:id="@+id/relativelayout_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp">


            <TextView
                android:id="@+id/textView_cname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="NLTVC"
                android:textColor="@color/colorHeader"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_cname_label"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/button_expand"
                android:layout_toStartOf="@+id/button_expand"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView_cowner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:text="Owner:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_expand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView_cname_label"
                android:background="@drawable/down_arrow" />

            <TextView
                android:id="@+id/textView_cowner_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/textView_cowner_label"
                android:layout_toRightOf="@+id/textView_cowner_label"
                android:padding="1dp"
                android:text="XYZ"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView_ID_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_expand"
                android:layout_toLeftOf="@+id/textView_id"
                android:layout_toStartOf="@+id/textView_id"
                android:text="ID:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view"
                android:layout_alignRight="@+id/view"
                android:layout_alignTop="@+id/textView_ID_label"
                android:layout_marginLeft="2dp"
                android:padding="1dp"
                android:text="1001"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_company_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout_company"
            android:background="#F9F8E9"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Start Date:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textview_date_label"
                android:padding="2dp"
                android:text="jan 30,2016"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView_desc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_date_label"
                android:padding="2dp"
                android:text="Description:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_desc_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_desc_label"
                android:layout_margin="2dp"
                android:text="description text"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView_dept_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_desc_value"
                android:padding="2dp"
                android:text="Departments:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_dept_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dept_label"
                android:layout_margin="2dp"
                android:text="Resource and development,finance,accounts"
                android:textColor="@android:color/black"
                android:textSize="12dp" />


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>